#!/bin/bash
# Convenient access to network-manager

if [ -z $1 ]
then
    echo -e "$(tput setaf 3)Tell me what to do...$(tput sgr0)"

elif [ $1 == 'con' ]
then
    nmcli dev wifi connect "$2" password "$3"

elif [ $1 == 'ls' ]
then
    nmcli d list | grep -F ".SSID"

    # More verbose:
    # nmcli dev wifi list

fi
