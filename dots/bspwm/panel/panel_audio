#!/bin/bash

LEVEL=`amixer -D pulse get -M Master | sed -n 's/^.*\[\([0-9]\+\)%.*$/\1/p' | uniq`
STATE=`amixer -D pulse get -M Master | sed -n 's/^.*\[\(o[nf]\+\)]$/\1/p' | uniq`

if [[ $STATE != "on" ]]; then
    ICON=""
elif [[ $LEVEL -lt 40 ]]; then
    ICON=""
elif [[ $LEVEL == 0 ]]; then
    ICON=""
else
    ICON=""
fi

echo "$ICON"
