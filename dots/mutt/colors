color status black yellow
color indicator black cyan

# urls
color body black yellow "(^|<| )mailto:[^ ]+@[^ ]( |>|$)"
color body black yellow "(^|<| )(http|https|ftp|file|telnet|news|finger)://[^ ]+( |>|$)"

# mailbox colors
color index   default             black     ~p      # i am to/cc
color index   default             black     ~P      # from me
color index   white               blue      ~N      # new
color index   brightyellow        black     ~O      # old
color index   yellow              black     ~F      # flagged
color index   blue                black     ~T      # tagged
color index   red                 black     ~D      # deleted
color index   blue                black     ~Q      # replied
color index   magenta             black     ~k      # GPG
color index   black               white     ~v      # collapsed thread
color index   brightgreen         black     '~f someone@mail.mail' # Separate colours for certain recipients 

# message headers
color header    brightgreen   black ^From:
color header    brightcyan    black ^To:
color header    brightcyan    black ^Reply-To:
color header    brightcyan    black ^Cc:
color header    brightblue    black ^Subject:

# quote blocks
color quoted     magenta       black
color quoted1    cyan          black
color quoted2    green         black
color quoted3    magenta       black
color quoted4    cyan          black
color quoted5    green         black
color quoted6    magenta       black
color quoted7    cyan          black
