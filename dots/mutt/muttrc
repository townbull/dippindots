# much of this mutt config was nabbed from:
# https://github.com/bubbl/bubb-confs/tree/master/mutt

set signature=~/.mutt/signature
set alias_file=~/.mutt/aliases

# Platform-dependent mailcap
`source ~/.mutt/ext/handle_platform`

# Local folders for cached headers and certs
set header_cache=~/.mutt/cache/headers
set message_cachedir=~/.mutt/cache/bodies
set certificate_file=~/.mutt/certificates

source ~/.mutt/auth
source ~/.mutt/folders
source ~/.mutt/options
source ~/.mutt/colors
source ~/.mutt/aliases
source ~/.mutt/bindings
source ~/.mutt/auto_views
#source ~/.mutt/crypto
